@model IEnumerable<MvcOnlineTicariOtomasyon.Models.Siniflar.SinifGrup3>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Striped Full Width Table</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Marka</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Sayı</th>
                </tr>
            </thead>
            <tbody>
                @{ int sirano = 0;}
                @foreach (var x in Model)
                {
                    <tr>
                        <td> @{sirano++;} @sirano</td>
                        <td>@x.Marka</td>
                        <td>
                            @if (x.Sayi == 1)
                            {<div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger" style="width: 50%"></div>
                                </div>}
                            @if (x.Sayi == 2)
                            {<div class="progress progress-xs">
                                    <div class="progress-bar bg-success" style="width: 60%"></div>
                                </div>}
                            @if (x.Sayi == 3)
                            {<div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width: 70%"></div>
                                </div>}
                        </td>
                        <td>
                            @if (x.Sayi >= 1 && x.Sayi <= 2)
                            {<span class="badge bg-danger">@x.Sayi</span>}
                            @if (x.Sayi >= 3 && x.Sayi <= 10)
                            {<span class="badge bg-success">@x.Sayi</span>}
                            @if (x.Sayi >= 10)
                            {<span class="badge bg-warning">@x.Sayi</span>}
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>

