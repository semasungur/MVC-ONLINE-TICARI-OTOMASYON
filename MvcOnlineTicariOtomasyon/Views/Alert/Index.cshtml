
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<br />
<br />
<button class="btn btn-danger" id="Btn1">Buton1</button>
<button class="btn btn-warning" id="Btn2">Buton2</button>
<button class="btn btn-info" id="Btn3">Buton3</button>
<button class="btn btn-success" id="Btn4">Buton4</button>
<button class="btn btn-dark" id="Btn5">Buton5</button>
<script>
    $('#Btn1').click(function () {
        swal("Hello world!");
    });
</script>
<script>
    $('#Btn2').click(function () {
        swal("Here's the title!", "...and here's the text!");
    });
</script>
<script>
    $('#Btn3').click(function () {
        swal("Good job!", "You clicked the button!", "success");
    });
</script>
<script>
    $('#Btn4').click(function () {
        swal({
            title: "Good job!",
            text: "You clicked the button!",
            icon: "success",
        });
    });
</script>
<script>
    $('#Btn5').click(function () {
        swal("Click on either the button or outside the modal.")
            .then((value) => {
                swal(`The returned value is: ${value}`);
            });
    });
</script>