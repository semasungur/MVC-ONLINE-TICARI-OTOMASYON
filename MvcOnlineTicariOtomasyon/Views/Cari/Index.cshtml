@using MvcOnlineTicariOtomasyon.Models.Siniflar;
@model List<Cariler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<table class="table table-striped">
    <tr>
        <th>Cari ID</th>
        <th>Ad Soyad</th>
        <th>Şehir</th>
        <th>Mail</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Satış Geçmişi</th>
    </tr>
    @foreach(var x in Model) {
      <tr>
         <td>@x.CariID</td>
         <td>@x.CariAd @x.CariSoyad</td>
         <td>@x.CariSehir</td>
         <td>@x.CariMail</td>
         <td><a href="/Cari/CariSil/@x.CariID" class="btn btn-info">Sil</a></td>
         <td><a href="/Cari/CariGetir/@x.CariID" class="btn btn-warning">Güncelle</a></td>
         <td><a href="/Cari/MüsteriSatis/@x.CariID" class="btn btn-default" style="background-color:brown">Satış Geçmisi</a></td>
     </tr>
            }
</table>
<a href="/Cari/YeniCari" class="btn btn-default" style="background-color:darkgrey">Yeni Cari Ekle</a>

