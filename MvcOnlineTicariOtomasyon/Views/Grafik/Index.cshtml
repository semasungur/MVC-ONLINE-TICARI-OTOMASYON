
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@* view üzerinden veriler manuel olarak bu şekilde grafiklendirilir *@
@{ 
    var grafik = new Chart(width: 500, height: 500);
    grafik.AddTitle(text:"Kategoriler ve Ürün Sayilari");
    grafik.AddLegend(title: "Değerler");
    grafik.AddSeries(
        name: "Veriler",
        chartType:"Pie",
        xValue: new[] { "Beyaz Eşya", "Telefon", "Küçük Ev Aletleri", "Bilgisayar" },
        yValues: new[] { 500, 250, 340, 620 }
        ); 
    grafik.Write();
}
